<div class="row">
    <div class="col-md-3">
        <div class="center">
            <%= image_tag avatar_url(@user), class: "avatar_full" %>
            <br/><br/>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">Accout Verification</div>
            <div class="panel-body">
            Email Address<br/>
            Phone Number
            </div>
            </div>
        </div>

        <div class="col-md-9">
            <h1><%= @user.first_name %> <%= @user.last_name %></h1>
            <h3>Member Since: <%= @user.confirmation_sent_at %></h3>
            <div class="description row-space-3">
                <%= @user.description %>
            </div>
        </div>
    </div>    