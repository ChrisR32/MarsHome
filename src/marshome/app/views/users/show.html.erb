<div class="row">
    <div class="col-md-3">
        <div class="center">
            <%= image_tag avatar_url(@user), class: "avatar_full" %>
            
            <% if current_user && current_user != @user %>
                <%= link_to "Send Message", conversations_path(sender_id: current_user.id, recipient_id: @user.id), method: :post, class: "btn btn-default" %>
            <% end %>

            <br/><br/>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">Accout Verification</div>
            <div class="panel-body">
            Email Address<br/>
            Phone Number
            </div>
            </div>
        </div>

        <div class="col-md-9">
            <h1><%= @user.first_name %> <%= @user.last_name %></h1>
            <h3>Member Since: <%= @user.confirmation_sent_at %></h3>
            <div class="description row-space-3">
                <%= @user.description %>
            </div>
        </div>
    </div>    