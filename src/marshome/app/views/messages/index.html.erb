<div class="row">
 
        <div class="col-md-3 text-center">
            <%= image_tag avatar_url(@other), class: "avatar_full" %>
            <strong><h1><%= @other.first_name %> <%= @other.last_name %></strong>
            <%= link_to "View Profile", @other, class: "btn btn-default"%>
        </div>
        <div class="col-md-9">
            <div class="panel-default-search">
                <div class="panel-heading text-center">
                    <h2>Conversation with <%= @other.first_name %> <%= @other.last_name %></h2>
                    <input id="conversation_id" type="hidden" value="<%= @conversation.id %>">
                </div>
                <div class="panel-body">
                    <div class="container text-center">
                    
                        <%= form_for [@conversation, @conversation.messages.new], remote: true do |f| %>

                            <div class="chat">
                            
                                <%= f.text_field :context, placeholder: "Add message", class: "form-control", id: "new_message" %>
                            
                            <%= f.hidden_field :user_id, value: current_user.id %>
                            <div>
                                <%= f.submit "Send Message", class: "btn btn-normal" %>
                            </div>
                        <% end %>
                        </div>
                    </div>
                </div>

                

            </div> 
            <div id="new_message">
            <%# <div id="chat" conversation_id="<%= @conversation.id %>"> %>
                    <%= render @messages %>
                </div>
        </div>   