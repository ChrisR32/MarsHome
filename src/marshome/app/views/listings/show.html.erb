
<div class="row">
    <div class="col-md-4">
        <div class="top-description">
        <p>Added:</p>
        </div>
        <br/>
        <div class="top-description">
            <p><%= @listing.address_number %> <%= @listing.address_street %><br/>
            <%= @listing.address_zone %><br/>
            <%= @listing.address_city %></p>            
        </div>
        <br/>
        <div class="top-description">
        <p> <%= @listing.price %></p>
        <p class="btn btn-listing btn-block">Buy it now</p>
        </div>
    </div>
    <div class="col-md-8">
        <div class="container">
            <div id='carousel-custom' class='carousel slide' data-ride='carousel'>
                <div class='carousel-outer'>
                    <div class='carousel-inner'>
                        <% @photos.each do |photo| %>
                            <div class="item <%= 'active' if photo.id == @photos[0].id %>">
                            <%= image_tag photo.image.url() %>
                            </div>
                        <% end %>
                    </div>
                    <a class='left carousel-control' href='#carousel-custom' data-slide='prev'>
                    <span class='glyphicon glyphicon-chevron-left'></span>
                    </a>
                    <a class='right carousel-control' href='#carousel-custom' data-slide='next'>
                    <span class='glyphicon glyphicon-chevron-right'></span>
                    </a>
                </div>
            </div>
        </div> 
    </div>
<br/>
<div class="row">
    <div class="col-md-12">  
            <div class="top-description-highlight">
                <h1><%= @listing.title %></h1>
            </div>
    </div>
</div>
<div class="row">
    <div class="col-md-9">  
            <div class="mid-description">
                <p>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <%= @listing.living_area %> Type
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <%= @listing.bath_room %> Bathrooms
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <%= @listing.bed_room %> Bedrooms
                        </div>
                    </div>
                </div>
                <%= @listing.smart_system %> <%= @listing.yard %> <%= @listing.heating %> <%= @listing.air_conditioning %>
                <br/>
                <h2>Description</h2>
                <%= @listing.description %>
                </p>

<p>
        
        
                <form class="form-horizontal" method="post">
                    <fieldset>
                        <legend class="text-center header">Contact us</legend>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
                            <div class="col-md-8">
                                <input id="fname" name="name" type="text" placeholder="First Name" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
                            <div class="col-md-8">
                                <input id="lname" name="name" type="text" placeholder="Last Name" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-envelope-o bigicon"></i></span>
                            <div class="col-md-8">
                                <input id="email" name="email" type="text" placeholder="Email Address" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-phone-square bigicon"></i></span>
                            <div class="col-md-8">
                                <input id="phone" name="phone" type="text" placeholder="Phone" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-pencil-square-o bigicon"></i></span>
                            <div class="col-md-8">
                                <textarea class="form-control" id="message" name="message" placeholder="Enter your massage for us here. We will get back to you within 2 business days." rows="7"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12 text-center">
                                <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
</p>
            
    </div>
    <div class="col-md-3">  
            <div class="mid-description-profile">
                <p>
                <h2>Listed by</h2>
                <%= @listing.user.profile_picture %>
                <%= @listing.user.first_name %> <%= @listing.user.last_name %>
                Member Since <%= @listing.user.date_joined %>
                </p>
            </div>
            <p class="btn btn-listing btn-block">Contact</p>
            <p class="btn btn-listing btn-block">View Profile</p>
            <div class="mid-description-profile">
            <p> 
            Users Rating:
            <p class="fa fa-star x1"><p class="fa fa-star x1"><p class="fa fa-star x1"><p class="fa fa-star x1"><p class="fa fa-star x1">
            </p>
            </div>
            <p class="btn btn-listing btn-block">View Feedback</p>
            <div class="mid-description-profile">
            <p> 
            Users Verification:
            <p class="fa fa-envelope fa-x5"><p class="fa fa-phone fa-x5">
            </p>
            </div>
    </div>
</div>