<div class="row">
    <div class="col-md-2">
        <%= render 'listing_menu', listing: @listing %>
    </div>

    <div class="col-md-10">
        <div class="panel panel-default">
            <h1 class="text-center">Location and Title</h1>
            <div class="panel-body">
                <%= form_for @listing do |f| %>
                    <div class="form-group">
                        <h3><label>Listing Title</label></h3>
                        <%= f.text_field :title, placeholder: "Enter a listing title, eg. 'Great Family Pod located just outside the First Settlers Colony!'", class: "form-control", required: true %>
                    </div>
                <div class="form-group">
                <h3><label>Description</label></h3>
                <%= f.text_area :description, rows: 5, placeholder: "Tell us about your listing.", class: "form-control", required: true %>
            </div>
        </div> 
        <br/>
        <%= f.submit "Save", class: "btn btn-form btn-block" %>
    </div>
    <% end %>
    </div>
</div>
