<div class="row">
    <div class="col-md-3">
    <%= render 'listing_menu', listing: @listing %>
</div>
<div class="col-md-9">
    <div class="panel panel-default">

<h1 class="text-center">Location and Title</h1>

    <div class="panel-body">
        <div class="container">
        <%= form_for @listing do |f| %>

                <div class ="row">
                            <div class="form-group">
                            <h3><label>Where is your property located?</label></h3>
                                <%= f.select :address_city, [["New Cloud City", "New Cloud City"], ["Upper West Dome City", "Upper West Dome City"], ["Mars Space Station", "Mars Space Station"], ["First Settlers Colony", "First Settlers Colony"], ["Rural", "Rural"]],
                                    id: "address_city", prompt: "Select...", class: "form-control" %>
                            </div>  

               
                       <div class="form-group">
        <h3><label>Listing Title</label></h3>
        <%= f.text_field :title, placeholder: "Enter a listing title, eg. 'Great Family Pod located just outside the First Settlers Colony!'", class: "form-control", required: true %>
        </div>
    </div>
                    <div class="text-center">
<%= f.submit "Save", class: "btn btn-form" %>
</div>
                   <% end %>
        </div>
    </div>
    
   </div>
  </div>
</div> 